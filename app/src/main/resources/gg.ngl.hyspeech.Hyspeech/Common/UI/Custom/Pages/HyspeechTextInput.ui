$C = "../HytCommon.ui";
$Sounds = "../HytSounds.ui";

Group #FormContainer {
    Anchor: (Width: 1000, Height: 250, Bottom: 50);
    Background: #1a1a2e(0.95);
    LayoutMode: Left;
    FlexWeight: 1;

    $C.@DecoratedContainer {
        Anchor: (Width: 1000);

        #Title {
            $C.@Title #NameTitle {
                @Text = "Input field";
            }
        }

        #Content {
            LayoutMode: Top;
            Padding: (Full: 16);

            Group #ContentGroup {
                LayoutMode: Top;
                Anchor: (Bottom: 12);
                Padding: (Full: 12);

                $C.@TextField #Input {
                    Anchor: (Top: 24, Bottom: 24, Height: 96);
                    Style: (FontSize: 48);
                    MaxLength: 48;
                }
            }
        }
    }
}

$C.@TextButton #NextButton {
    Text: "NEXT";
    Anchor: (Width: 192, Height: 48, Bottom: 24);
    FlexWeight: 1;
}